    <!-- ComboBox White Item - Format Containers -->
    <Style x:Key="ComboBoxCategoryStyleItem_FormatContainer" TargetType="{x:Type ComboBoxItem}">
        <Style.Triggers>
            <!-- Headers -->
            <DataTrigger Binding="{Binding Category}" Value="True">
                <Setter Property="IsEnabled" Value="False"/>
