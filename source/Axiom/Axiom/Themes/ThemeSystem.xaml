                <Setter Property="Margin" Value="0,7,0,0"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Category}" Value="False">
                <Setter Property="Margin" Value="0,0,0,0"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- ComboBox White Item -->
