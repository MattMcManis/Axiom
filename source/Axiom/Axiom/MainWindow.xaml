                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,0,0,0" 
                       Style="{DynamicResource ButtonWindow}" />
            </ToggleButton>

            <!-- Auto Sort Script Button -->
            <ToggleButton x:Name="tglAutoSortScript"
                          Style="{DynamicResource ToggleButtonStyle}"
                          IsChecked="{Binding MainView.AutoSortScript_IsChecked}"
                          Margin="0,0,0,0"
                          Cursor="Hand" 
                          Width="22" 
                          Height="22" 
                          ToolTipService.InitialShowDelay="500" 
                          ToolTipService.ShowOnDisabled="True"
                          ToolTip="Auto Sort Script" 
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Grid.Column="4" 
                          Checked="tglAutoSortScript_Checked"
                          Unchecked="tglAutoSortScript_Unchecked">
                <Image Width="10"
                       Height="11" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,0,0,0" 
                       Style="{DynamicResource ButtonAutoSortScript}" />
            </ToggleButton>

            <!-- Debug Console -->
            <Button x:Name="btnDebugConsole"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="22"
                    Height="22"
                    Cursor="Hand" 
                    Click="btnDebugConsole_Click" 
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallStyle}" 
                    ToolTipService.InitialShowDelay="500"
                    ToolTipService.ShowOnDisabled="True"
                    ToolTip="Show Debug Console" 
                    Grid.Column="5" 
                    Margin="1,0,0,0">
                <Image Width="12" 
                       Height="10" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="-1,0,0,0"
                       Style="{DynamicResource ButtonDebugConsole}" />
            </Button>

            <!-- Log Console -->
            <Button x:Name="btnLogConsole" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" 
                    Width="22"
                    Height="22"
                    Cursor="Hand" 
                    Click="btnLogConsole_Click" 
                    Background="{x:Null}"
                    Style="{DynamicResource ButtonSmallStyle}"
                    ToolTipService.InitialShowDelay="500"
                    ToolTipService.ShowOnDisabled="True"
                    ToolTip="Show Log Console" 
                    Grid.Column="6">
                <Image Width="10"
                       Height="11"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0" 
                       Style="{DynamicResource ButtonLogConsole}" />
            </Button>

            <!-- Log Button -->
            <Button x:Name="btnLog"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="22" 
                    Height="22"
                    Cursor="Hand"
                    Click="btnLog_Click"
                    ToolTipService.InitialShowDelay="500"
                    ToolTipService.ShowOnDisabled="True"
                    ToolTip="View the last Output Log"
                    Background="{x:Null}"
                    Style="{DynamicResource ButtonSmallStyle}"
                    Grid.Column="7">
                <Image Width="9" 
                       Height="11" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       Margin="0,-1,0,0" 
                       Style="{DynamicResource ButtonLog}" />
            </Button>

            <!-- CMD Button -->
            <Button x:Name="btnCmd"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="22" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="btnCmd_Click" 
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallStyle}" 
                    ToolTipService.InitialShowDelay="500"
                    ToolTipService.ShowOnDisabled="True"
                    ToolTip="Launch Command Prompt"
                    Grid.Column="8">
                <Image Width="11" 
                       Height="11" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       Style="{DynamicResource ButtonCMD}" />
            </Button>

            <!-- Properties Button -->
            <Button x:Name="btnProperties" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Width="22"
                    Height="22" 
                    Cursor="Hand" 
                    Click="btnProperties_Click"
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallStyle}" 
                    ToolTipService.InitialShowDelay="500"
                    ToolTipService.ShowOnDisabled="True"
                    ToolTip="View File Properties"
                    Grid.Column="9">
                <Image Width="10"
                       Height="11" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,0,0,0"
                       Style="{DynamicResource ButtonProperties}" />
            </Button>

            <!-- Play File -->
            <Button x:Name="btnPlayFile"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="22" 
                    Height="22"
                    Cursor="Hand" 
                    Click="btnPlayFile_Click" 
                    Background="{x:Null}" 
                    Style="{DynamicResource ButtonSmallStyle}" 
                    ToolTipService.InitialShowDelay="500"
                    ToolTipService.ShowOnDisabled="True"
                    ToolTip="Play Converted File"
                    Grid.Column="10">
                <Image Width="11" 
                       Height="11"
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="-1,0,0,0" 
                       Style="{DynamicResource ButtonPlay}" />
            </Button>

        </Grid>


        <!-- Process Buttons Grid -->
        <Grid Margin="0,0,10,0" 
              Height="35" 
              VerticalAlignment="Bottom" 
              HorizontalAlignment="Right" 
              Width="433">

            <!-- Delete Preset ini -->
            <Button x:Name="btnDeletePreset"
                    Style="{DynamicResource ButtonSmallStyle}" 
                    Background="{x:Null}" 
                    Margin="0,0,0,13" 
                    VerticalAlignment="Bottom" 
                    Height="22"
                    Cursor="Hand" 
                    ToolTipService.InitialShowDelay="500" 
                    ToolTipService.ShowOnDisabled="True" 
                    ToolTip="Delete Preset"
                    Click="btnDeletePreset_Click"
                    HorizontalAlignment="Left"
                    Width="22">
                <Image Style="{DynamicResource ButtonDeleteStyle}" 
                       Width="9" 
                       Height="11" 
                       Margin="0,-1,0,0"
                       Stretch="Fill" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </Button>

            <!-- Save Preset ini -->
            <Button x:Name="btnSavePreset"
                    Style="{DynamicResource ButtonSmallStyle}" 
                    Background="{x:Null}" 
                    Margin="28,0,0,13" 
                    Height="22"
                    VerticalAlignment="Bottom" 
                    Cursor="Hand" 
                    ToolTipService.InitialShowDelay="500" 
                    ToolTipService.ShowOnDisabled="True" 
                    ToolTip="Save Preset"
                    Click="btnSavePreset_Click"
                    HorizontalAlignment="Left" 
                    Width="22">
                <Image Style="{DynamicResource ButtonExportStyle}" 
                       Width="11" 
                       Height="11" 
                       Margin="0,-1,0,0"
                       Stretch="Fill" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </Button>

            <!-- Preset -->
            <ComboBox x:Name="cboPreset" 
                      ItemsSource="{Binding MainView.Preset_Items, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedIndex="{Binding MainView.Preset_SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Name"
                      SelectedValue="{Binding MainView.Preset_SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Style="{DynamicResource ComboBoxCategoryStyle}"
                      ItemContainerStyle="{DynamicResource ComboBoxCategoryStyleItem_FormatContainer}" 
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top" 
                      Width="75" 
                      Height="22"
                      SelectionChanged="cboPreset_SelectionChanged" 
                      Margin="56,0,0,0" >
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Margin="0, -7, 0, 0"/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="93">
                            <TextBlock DataContext="{Binding}">
                                <TextBlock.Text>
                                    <Binding Path="Name"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Preview Button -->
            <Button x:Name="btnPreview"
                    Style="{DynamicResource ButtonStyle}" 
                    HorizontalAlignment="Right" 
                    Margin="0,0,87,0" 
                    VerticalAlignment="Top"
                    Width="75" 
                    Height="22"
                    Cursor="Hand" Click="btnPreview_Click">
                <TextBlock x:Name="btnPreviewTextBlock" 
                           Text="Preview"
                           Margin="0,-2,0,0"/>
            </Button>

            <!-- Convert Button -->
            <Button x:Name="btnConvert"
                    Style="{DynamicResource ButtonStyle}" 
                    HorizontalAlignment="Right" 
                    Margin="0,0,4,0" 
                    VerticalAlignment="Top"
                    Width="75" 
                    Height="22"
                    Cursor="Hand" Click="btnConvert_Click">
                <TextBlock x:Name="btnConvertTextBlock" 
                           Text="{Binding MainView.Convert_Text, Mode=TwoWay}"
                           Margin="0,-2,0,0"/>
            </Button>

            <!-- Batch Checkbox -->
            <ToggleButton x:Name="tglBatch" 
                          IsChecked="{Binding MainView.Batch_IsChecked, Mode=TwoWay}"
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Top" 
                          Checked="tglBatch_Checked" 
                          Unchecked="tglBatch_Unchecked" 
                          Cursor="Hand" 
                          ToolTipService.InitialShowDelay="500"
                          ToolTipService.ShowOnDisabled="True"
                          ToolTip="Enable, Browse for folder, Enter file extention to batch process."
                          Width="45"
                          Height="22"
                          Style="{DynamicResource ToggleButtonStyle}"
                          Margin="0,0,242,0">
                <TextBlock x:Name="batchTextBlock" 
                           Style="{DynamicResource TextBlockStyle}" 
                           Text="Batch"
                           Margin="0,-2,0,0" />
            </ToggleButton>

            <!-- Batch Textbox -->
            <TextBox x:Name="batchExtensionTextBox" 
                     Text="{Binding MainView.BatchExtension_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding MainView.BatchExtension_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalAlignment="Right" 
                     Height="23" 
                     Margin="0,0,177,0" 
                     TextWrapping="NoWrap"
                     Padding="2,1,0,0" 
                     VerticalAlignment="Top" 
                     Width="60" 
                     TextChanged="batchExtension_TextChanged"
                     Style="{DynamicResource TextBoxStyle}" 
                     ToolTipService.InitialShowDelay="500" 
                     ToolTipService.ShowOnDisabled="True" 
                     ToolTip="File Extension in Folder to Batch Process (e.g. mp4)"/>

        </Grid>

    </Grid>
</Window>
