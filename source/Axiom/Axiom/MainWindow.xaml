<Window x:Class="Axiom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        xmlns:Themes1="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" 
        xmlns:my="clr-namespace:Axiom"
        xmlns:local="clr-namespace:Axiom"
        xmlns:settings="clr-namespace:Axiom.Properties"
        mc:Ignorable="d"
        
        Loaded="Window_Loaded" 
        Closing="Window_Closing"  
        Icon="axiom.ico"
        
        RenderOptions.BitmapScalingMode="Fant"
        UseLayoutRounding="True"       
        Width="824"
        Height="464"
        
        Title="{Binding MainView.TitleVersion, Mode=OneWay}" 
        Style="{DynamicResource WindowStyle}"
        >

    <Window.DataContext>
        <local:VM/>
    </Window.DataContext>

    <Window.Resources>

        <!-- Group Box Epander -->
        <!-- Disables Expander Header Click -->
        <Style x:Key="GroupBoxExpanderToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid SnapsToDevicePixels="False" Background="Transparent">
                            <Ellipse HorizontalAlignment="Center" x:Name="circle" VerticalAlignment="Center" Width="0" Height="0" Fill="{DynamicResource ButtonNormalBackgroundFill}" Stroke="Transparent"/>
                            <Ellipse Visibility="Hidden" HorizontalAlignment="Center" x:Name="shadow" VerticalAlignment="Center" Width="0" Height="0" Fill="{DynamicResource ExpanderShadowFill}"/>
                            <Path SnapsToDevicePixels="false" x:Name="arrow" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="Transparent" StrokeThickness="0" Data="M1,1 L4,4 7,1" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Data" TargetName="arrow" Value="M 1,4  L 4,1  L 7,4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Stroke" TargetName="circle" Value="Transparent"/>
                                <Setter Property="Stroke" TargetName="arrow" Value="Transparent"/>
                                <Setter Property="Visibility" TargetName="shadow" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="GroupBoxBorderBrush" Color="Transparent"/>
        <SolidColorBrush x:Key="GroupBoxHeaderBrush" Color="Transparent"/>
        <BorderGapMaskConverter x:Key="BorderGapMaskConverter"/>

        <Style x:Key="GroupBoxExpanderStyle" TargetType="Expander">
            <Setter Property="BorderBrush" Value="{StaticResource GroupBoxBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Expander}">
                        <Grid SnapsToDevicePixels="true">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0" />
                            </Grid.RowDefinitions>
                            <Border CornerRadius="4" Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="Transparent" Background="{TemplateBinding Background}" />
                            <Border x:Name="Header" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Padding="3,0,3,0">
                                <Grid SnapsToDevicePixels="False" Background="Transparent" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton Grid.Column="0" MinHeight="0" MinWidth="0"
                                    Name="HeaderToggle" Style="{StaticResource GroupBoxExpanderToggleButtonStyle}"
                                    IsChecked="{Binding Path=IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" >
                                    </ToggleButton>
                                    <ContentPresenter ContentSource="Header" RecognizesAccessKey="true"
                                    TextElement.Foreground="{StaticResource GroupBoxHeaderBrush}"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="3,0,0,0" />
                                </Grid>
                            </Border>

                            <ContentPresenter x:Name="ExpandSite" Visibility="Collapsed" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                            <Border Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="4" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="4">
                                <Border.OpacityMask>
                                    <MultiBinding Converter="{StaticResource BorderGapMaskConverter}" ConverterParameter="7">
                                        <Binding Path="ActualWidth" ElementName="Header"/>
                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource Self}"/>
                                        <Binding Path="ActualHeight" RelativeSource="{RelativeSource Self}"/>
                                    </MultiBinding>
                                </Border.OpacityMask>
                            </Border>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="true">
                                <Setter Property="Visibility" TargetName="ExpandSite" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>

        <!-- Script View -->
        <TextBox x:Name="tbxScriptView" 
                 Text="{Binding MainView.ScriptView_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{DynamicResource TextBoxScriptView}"
                 FontSize="14" 
                 RenderOptions.ClearTypeHint="Enabled"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Margin="11,71,280,56" 
                 Padding="10,10,10,48"
                 Grid.ColumnSpan="1" >
        </TextBox>

        <!-- Save Button -->
        <Button x:Name="btnScriptSave" 
                Style="{DynamicResource ButtonStyle}"
                Margin="21,0,0,66"
                Cursor="Hand"
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60"
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="56" 
                Click="btnScriptSave_Click">
            <TextBlock Text="Save" 
                       Margin="0,-2,0,0"/>
        </Button>

        <!-- Copy Button -->
        <Button x:Name="btnScriptCopy"
                Style="{DynamicResource ButtonStyle}"
                Margin="89,0,0,66"
                Cursor="Hand" 
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Width="54" 
                Click="btnScriptCopy_Click">
            <TextBlock Text="Copy" 
                Margin="0,-2,0,0"/>
        </Button>

        <!-- Sort Button -->
        <Button x:Name="btnScriptSort"
                Style="{DynamicResource ButtonStyle}"
                Margin="157,0,0,66" 
                Cursor="Hand"
                MaxWidth="60"
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                Width="53"
                Click="btnScriptSort_Click" >
            <TextBlock x:Name="txblScriptSort" 
                       Text="Sort"
                       Width="50"
                       Margin="0,-2,0,0"
                       TextAlignment="Center"/>
        </Button>

        <!-- Clear Button -->
        <Button x:Name="btnScriptClear"
                Style="{DynamicResource ButtonStyle}"
                Margin="225,0,0,66" 
                Cursor="Hand"
                MaxWidth="60"
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Height="22" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                Width="53" Click="btnScriptClear_Click" >
            <TextBlock x:Name="txblScriptClear" 
                       Text="Clear"
                       Width="50"
                       Margin="0,-2,0,0"
                       TextAlignment="Center"/>
        </Button>

        <!-- Script Button -->
        <Button x:Name="btnScript" 
                Style="{DynamicResource ButtonStyle}" 
                HorizontalAlignment="Left"
                Margin="293,0,0,66"
                VerticalAlignment="Bottom"
                Width="60" 
                Height="22" 
                Cursor="Hand"
                ToolTipService.InitialShowDelay="500" 
                ToolTipService.ShowOnDisabled="True" 
                ToolTip="Generate FFmpeg Commands" 
                Click="btnScript_Click">
            <TextBlock Text="Script" 
                       Margin="0,-2,0,0" />
        </Button>

        <!-- Run Button -->
        <Button x:Name="btnScriptRun"
                Style="{DynamicResource ButtonStyle}"
                Margin="361,0,0,66"
                Cursor="Hand" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                MaxWidth="60" 
                MaxHeight="22"
                MinWidth="60" 
                MinHeight="22" 
                Width="54" 
                Height="22" 
                ToolTipService.InitialShowDelay="500" 
                ToolTipService.ShowOnDisabled="True"
                ToolTip="Run the customized Script." 
                Click="btnScriptRun_Click">
            <TextBlock Text="Run" 
                Margin="0,-2,0,0"/>
        </Button>


        <!-- Input / Output Grid -->
        <Grid Height="56" 
              VerticalAlignment="Top" 
              Margin="10,10,295,0">

            <!-- Browse Button -->
            <Button x:Name="btnInput" 
                    Style="{DynamicResource ButtonStyle}" 
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Width="70" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="btnInput_Click">
                <TextBlock Text="Input" Margin="0,-2,0,0"/>
            </Button>

            <!-- Browse Textbox -->
            <TextBox x:Name="tbxInput" 
                     Text="{Binding MainView.Input_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{DynamicResource TextBoxBrowseStyle}" 
                     Height="22"
                     Margin="75,0,-14,0" 
                     Padding="2, 0, 25, 0" 
                     TextWrapping="NoWrap"
                     MaxLines="1" 
                     VerticalAlignment="Top" 
                     TextChanged="tbxInput_TextChanged"
                     AllowDrop="True"
                     PreviewDragOver="tbxInput_PreviewDragOver"
                     PreviewDragEnter="tbxInput_PreviewDragOver"
                     PreviewDrop="tbxInput_PreviewDrop"
                     />

            <!-- Input Location Button -->
            <Button x:Name="openLocationInput" 
                    Style="{DynamicResource ButtonFolderStyle}" 
                    IsEnabled="{Binding MainView.Input_Location_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,1,-11,0"
                    Cursor="Hand"
                    Click="openLocationInput_Click"
                    ToolTipService.InitialShowDelay="500"
                    ToolTipService.ShowOnDisabled="True"
                    ToolTip="Open this location"
                    HorizontalAlignment="Right"
                    Width="22" 
                    Height="20" 
                    VerticalAlignment="Top">
                <Image Width="11" 
                       Height="7" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="1,0,0,0" 
                       Style="{DynamicResource ButtonQuickFolder}" />
            </Button>

            <!-- Output Button -->
            <Button x:Name="btnOutput" 
                    Style="{DynamicResource ButtonStyle}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="70" 
                    Height="22" 
                    Cursor="Hand" 
                    Click="btnOutput_Click" 
                    Margin="0,29,0,0">
                <TextBlock Text="Output" Margin="0,-2,0,0"/>
            </Button>
            <!-- Output Textbox-->
            <TextBox x:Name="tbxOutput" 
                     Text="{Binding MainView.Output_Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Style="{DynamicResource TextBoxBrowseStyle}"
                     Height="22"
                     Margin="75,29,-14,0"
                     Padding="2, 0, 25, 0" 
                     TextWrapping="NoWrap" 
                     MaxLines="1" 
                     VerticalAlignment="Top" 
                     TextChanged="tbxOutput_TextChanged"
                     AllowDrop="True"
                     PreviewDragOver="tbxOutput_PreviewDragOver"
                     PreviewDragEnter="tbxOutput_PreviewDragOver"
                     PreviewDrop="tbxOutput_PreviewDrop"/>

            <!-- Output Location Button -->
            <Button x:Name="openLocationOutput"
                    Style="{DynamicResource ButtonFolderStyle}" 
                    IsEnabled="{Binding MainView.Output_Location_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Cursor="Hand" 
                    Click="openLocationOutput_Click" 
                    ToolTipService.InitialShowDelay="500"
                    ToolTipService.ShowOnDisabled="True"
                    ToolTip="Open this location"
                    HorizontalAlignment="Right"
                    Width="22" 
                    Height="20" 
                    VerticalAlignment="Top"
                    Margin="0,30,-11,0">
                <Image Width="11"
                       Height="7" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="1,0,0,0"
                       Style="{DynamicResource ButtonQuickFolder}" />
            </Button>

        </Grid>


        <!-- Tab Control -->
        <TabControl x:Name="tabControl" 
                    HorizontalAlignment="Right" 
                    Width="260" 
                    Margin="0,10,10,56"
                    Background="Transparent">

            <!-- Format Tab -->
            <TabItem Header="Format" 
                     Width="85"
                     DataContext="{Binding FormatView}"
                     Style="{DynamicResource TabItemStyle}">
                <Grid Background="Transparent">

                    <!-- Scroll Viewer -->
                    <ScrollViewer HorizontalAlignment="Right" 
                                  Width="254"
                                  Template="{DynamicResource ScrollViewerControlTemplate}">

                        <!-- Grid -->
                        <Grid Margin="0,20,0,30"  
                              VerticalAlignment="Top">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="96"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                                <RowDefinition Height="33"/>
                            </Grid.RowDefinitions>

                            <!-- Container -->
                            <Label Style="{DynamicResource LabelStyle}"
                                    Content="Container" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top" 
                                    Width="86" 
                                    FontFamily="Segoe UI Semilight" 
                                    Height="26" 
                                   Grid.Column="1" />
                            <ComboBox x:Name="cboFormat_Container" 
                                      ItemsSource="{Binding Format_Container_Items}"
                                      SelectedIndex="{Binding Format_Container_SelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Name"
                                      SelectedValue="{Binding Format_Container_SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxCategoryStyle}"
                                      ItemContainerStyle="{DynamicResource ComboBoxCategoryStyleItem_FormatContainer}" 
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top" 
                                      Width="105" 
                                      Height="22"
                                      SelectionChanged="cboFormat_Container_SelectionChanged" 
                                      Grid.Column="2" 
                                      Margin="0,2,0,0">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Margin="0,-7,0,0"/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock DataContext="{Binding}">
                                                <TextBlock.Text>
                                                    <Binding Path="Name"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- MediaType -->
                            <Label Style="{DynamicResource LabelStyle}"
                                   Content="Media" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Width="86" 
                                   FontFamily="Segoe UI Semilight" 
                                   Grid.Row="1" 
                                   Height="26" 
                                   Grid.Column="1" />
                            <ComboBox x:Name="cboFormat_MediaType" 
                                      ItemsSource="{Binding Format_MediaType_Items}"
                                      SelectedIndex="{Binding Format_MediaType_SelectedIndex}"
                                      SelectedItem="{Binding Format_MediaType_SelectedItem, Mode=TwoWay}"
                                      IsEnabled="{Binding Format_MediaType_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxStyle}"
                                      ItemContainerStyle="{DynamicResource ComboBoxStyleItem}" 
                                      HorizontalAlignment="Left"
                                      Margin="0,2,0,0" 
                                      VerticalAlignment="Top" 
                                      Width="105"
                                      SelectionChanged="cboFormat_MediaType_SelectionChanged" 
                                      Grid.Row="1"
                                      Grid.Column="2"
                                      Height="22"/>

                            <!-- Cut -->
                            <Label Style="{DynamicResource LabelStyle}" 
                                   Content="Cut" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Width="86" 
                                   FontFamily="Segoe UI Semilight" 
                                   Grid.Row="3"
                                   Height="26" 
                                   Grid.Column="1" />
                            <ComboBox x:Name="cboFormat_Cut" 
                                      ItemsSource="{Binding Format_Cut_Items}"
                                      SelectedIndex="{Binding Format_Cut_SelectedIndex}"
                                      SelectedItem="{Binding Format_Cut_SelectedItem, Mode=TwoWay}"
                                      IsEnabled="{Binding Format_Cut_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource ComboBoxCategoryStyle}"
                                      ItemContainerStyle="{DynamicResource ComboBoxCategoryStyleItem}" 
                                      HorizontalAlignment="Left" VerticalAlignment="Top"
                                      Width="105" 
                                      SelectionChanged="cboFormat_Cut_SelectionChanged" 
                                      Grid.Column="2" 
                                      Grid.Row="3" 
                                      Height="22" 
                                      Margin="0,3,0,0" />

                            <!-- Cut Start -->
                            <Label Style="{DynamicResource LabelStyle}"
                                   Content="Start Time"
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Width="86" 
                                   FontFamily="Segoe UI Semilight"
                                   Grid.Row="4"
                                   Height="26" 
                                   Grid.Column="1" />
                            <!-- Hours -->
                            <TextBox x:Name="tbxCutStartHours"
                                     Text="{Binding Format_CutStart_Hours_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_CutStart_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCut}"
                                     ToolTipService.InitialShowDelay="500" 
                                     ToolTipService.ShowOnDisabled="True" 
                                     ToolTip="Hours" 
                                     TextWrapping="NoWrap"
                                     MaxLines="1"
                                     MaxLength="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top" 
                                     Width="21" 
                                     Height="22" 
                                     Padding="1,1,0,0" 
                                     Margin="1,3,0,0"
                                     Grid.Column="2" 
                                     Grid.Row="4"
                                     KeyDown="tbxCutStartHours_KeyDown"
                                     GotFocus="tbxCutStartHours_GotFocus" 
                                     LostFocus="tbxCutStartHours_LostFocus" 
                                     Panel.ZIndex="2"/>
                            <Label x:Name="lblCutStartHours"
                                   Style="{DynamicResource LabelCut}" 
                                   IsEnabled="{Binding Format_CutStart_IsEnabled}"
                                   Content=":" 
                                   FontFamily="Segoe UI Semilight" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Grid.Row="4"
                                   Width="3" 
                                   Height="18" 
                                   Grid.Column="2" 
                                   Padding="0"
                                   Margin="21,4,0,0" 
                                   Panel.ZIndex="1" />

                            <!-- Minutes -->
                            <TextBox x:Name="tbxCutStartMinutes"
                                     Text="{Binding Format_CutStart_Minutes_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_CutStart_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCut}"
                                     ToolTipService.InitialShowDelay="500" 
                                     ToolTipService.ShowOnDisabled="True"
                                     ToolTip="Minutes"
                                     TextWrapping="NoWrap"
                                     MaxLines="1"
                                     MaxLength="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top" 
                                     Width="21" 
                                     Height="22" 
                                     Grid.Column="2" 
                                     Grid.Row="4"
                                     Padding="1,1,0,0" 
                                     Margin="22,3,0,0" 
                                     KeyDown="tbxCutStartMinutes_KeyDown"
                                     GotFocus="tbxCutStartMinutes_GotFocus" 
                                     LostFocus="tbxCutStartMinutes_LostFocus"
                                     Panel.ZIndex="2"/>
                            <Label x:Name="lblCutStartMinutes"
                                   Style="{DynamicResource LabelCut}" 
                                   IsEnabled="{Binding Format_CutStart_IsEnabled}"
                                   Content=":" 
                                   FontFamily="Segoe UI Semilight" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Width="3" 
                                   Height="18" 
                                   Padding="0"
                                   Margin="42,4,0,0" 
                                   Grid.Column="2" 
                                   Grid.Row="4"
                                   Panel.ZIndex="1" />

                            <!-- Seconds -->
                            <TextBox x:Name="tbxCutStartSeconds"
                                     Text="{Binding Format_CutStart_Seconds_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_CutStart_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCut}"
                                     ToolTipService.InitialShowDelay="500" 
                                     ToolTipService.ShowOnDisabled="True" 
                                     ToolTip="Seconds"
                                     TextWrapping="NoWrap"
                                     MaxLines="1"
                                     MaxLength="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Width="21" 
                                     Height="22" 
                                     Grid.Column="2" 
                                     Grid.Row="4"
                                     Padding="1,1,0,0" 
                                     Margin="43,3,0,0" 
                                     KeyDown="tbxCutStartSeconds_KeyDown"
                                     GotFocus="tbxCutStartSeconds_GotFocus" 
                                     LostFocus="tbxCutStartSeconds_LostFocus"
                                     Panel.ZIndex="2"/>
                            <Label x:Name="lblCutStartSeconds"
                                   Style="{DynamicResource LabelCut}" 
                                   IsEnabled="{Binding Format_CutStart_IsEnabled}"
                                   Content="." 
                                   FontFamily="Segoe UI Semilight" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   Width="3" 
                                   Padding="0"
                                   Margin="63,4,0,0" 
                                   Grid.Row="4"
                                   Grid.Column="2" 
                                   Panel.ZIndex="1" />

                            <!-- Milliseconds -->
                            <TextBox x:Name="tbxCutStartMilliseconds"
                                     Text="{Binding Format_CutStart_Milliseconds_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_CutStart_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCut}"
                                     ToolTipService.InitialShowDelay="500" 
                                     ToolTipService.ShowOnDisabled="True" 
                                     ToolTip="Milliseconds"
                                     TextWrapping="NoWrap"
                                     MaxLines="1"
                                     MaxLength="3"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top" 
                                     Width="30" 
                                     Height="22" 
                                     Grid.Column="2" 
                                     Grid.Row="4"
                                     Padding="1,1,0,0" 
                                     Margin="64,3,0,0" 
                                     KeyDown="tbxCutStartMilliseconds_KeyDown"
                                     GotFocus="tbxCutStartMilliseconds_GotFocus" 
                                     LostFocus="tbxCutStartMilliseconds_LostFocus"
                                     Panel.ZIndex="2"/>
                            <!-- Background -->
                            <TextBox x:Name="tbxCutStart"
                                     Text=""
                                     IsEnabled="{Binding Format_CutStart_IsEnabled}"
                                     Style="{DynamicResource TextBoxStyle}"
                                     IsReadOnly="True"
                                     Cursor="Arrow"
                                     TextWrapping="NoWrap"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top" 
                                     Width="105" 
                                     Height="22" 
                                     Grid.Column="2" 
                                     Grid.Row="4"
                                     Padding="1,1,0,0" 
                                     Margin="0,3,0,0"/>


                            <!-- Cut End -->
                            <Label 
                                Style="{DynamicResource LabelStyle}" 
                                Content="End Time" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Width="86"
                                FontFamily="Segoe UI Semilight" 
                                Grid.Row="5"
                                Height="26" 
                                Grid.Column="1" />

                            <!-- Hours -->
                            <TextBox x:Name="tbxCutEndHours"
                                     Text="{Binding Format_CutEnd_Hours_Text, Mode=TwoWay}"
                                     IsEnabled="{Binding Format_CutEnd_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{DynamicResource TextBoxCut}"
                                     ToolTipService.InitialShowDelay="500" 
                                     ToolTipService.ShowOnDisabled="True" 
                                     ToolTip="Hours" 
                                     TextWrapping="NoWrap"
                                     MaxLines="1"
                                     MaxLength="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top" 
                                     Width="21" 
                                     Height="22" 
                                     Padding="1,1,0,0" 
                                     Margin="1,3,0,0"
                                     Grid.Column="2" 
                                     Grid.Row="5"
                                     KeyDown="tbxCutEndHours_KeyDown"
                                     GotFocus="tbxCutEndHours_GotFocus" 
